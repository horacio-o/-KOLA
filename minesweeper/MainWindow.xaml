<Window x:Class="minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>

            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>

            <RowDefinition/>
        </Grid.RowDefinitions>
        <Expander x:Name="Expander" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Height="123" Header="Difficulty" VerticalAlignment="Center" Width="100" Margin="0,0,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid Background="#FFE5E5E5">
                <Button Content="Easy" HorizontalAlignment="Center" VerticalAlignment="Top" Width="98" Height="33" Click="EasyClick"/>
                <Button Content="Medium" HorizontalAlignment="Center" VerticalAlignment="Top" Width="98" Height="33" Margin="0,33,0,0" Click="MediumClick"/>
                <Button Content="Hardcore" HorizontalAlignment="Center" VerticalAlignment="Top" Width="98" Height="33" Margin="0,66,0,0" Click="HardcoreClick"/>
            </Grid>
        </Expander>
        <Rectangle x:Name="WinRect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="434" Grid.RowSpan="2" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FFAE37E8" Visibility="Hidden"/>
        <Label x:Name="WinLabel" Content="VÍTĚZSTVÍ" HorizontalAlignment="Left" Height="34" Margin="367,200,0,0" VerticalAlignment="Top" Width="66" Grid.ColumnSpan="2" Grid.RowSpan="2" Visibility="Hidden"/>
    </Grid>
</Window>
